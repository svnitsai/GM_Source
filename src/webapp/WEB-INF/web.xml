<!DOCTYPE web-app 
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>Garment Mantra Application</display-name>
	<description>Garment Mantra Application</description>

	<servlet>
		<servlet-name>Login Servlet</servlet-name>
		<servlet-class>com.svnitsai.gm.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login Servlet</servlet-name>
		<url-pattern>/web/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Data Refresh Servlet</servlet-name>
		<servlet-class>com.svnitsai.gm.DataRefreshServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Data Refresh Servlet</servlet-name>
		<url-pattern>/web/DataRefreshServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


</web-app>
